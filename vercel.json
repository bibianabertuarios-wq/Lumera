{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.json", "use": "@vercel/static" },
    { "src": "*.png", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/terminos", "dest": "/terminos.html" },
    { "src": "/privacidad", "dest": "/privacidad.html" },
    { "src": "/terms", "dest": "/terms.html" },
    { "src": "/privacy", "dest": "/privacy.html" },
    { "src": "/lumera-intro.mp4", "dest": "/public/lumera-intro.mp4" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
